<%- include('./partials/head') %>

<header class="header-huisdieren">
  <nav class="navbar-items">
    <a href="#" class="nav-content">SQUAD A</a>
    <a href="#" class="nav-content">SQUAD B</a>
    <a href="#" class="nav-content">SQUAD C</a>
  </nav>
</header>


<main>

<img src="/squad-b.png" class="squad-b-img">

<section class="card-container">
  <!-- Hier komen de members -->
  <% squad.members.forEach(member => { %>
    <div class="member-card">
      <% if (member.avatar) { %>
      <img src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
      <% }else{ %>
      <img src="/placeholder.jpeg" alt="Placeholder avatar" />
      <% } %>
      <h2><%= member.name %> <%= member.prefix %> <%= member.surname %></h2>
      <button type="button" class="info-button">Meer info!</button> 
    </div> 
  <% }) %>
  
</section>

</main>

<%- include('./partials/foot') %>