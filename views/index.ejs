<%- include('./partials/head') %>

<header class="header-huisdieren">
  <nav class="navbar-items">
    <a href="#" class="nav-content">SQUAD A</a>
    <a href="#" class="nav-content">SQUAD B</a>
    <a href="#" class="nav-content">SQUAD C</a>
  </nav>
</header>

<main>
  <img src="/squad-b.jpg" class="squad-b-img" alt="Squad B groepsfoto" />

<!-- Sorteren op voor- of achternaam -->
  <a href="/?squad=<%= squad.slug %>&orderBy=surname" class="order-by-surname">Achternaam</a>
  <a href="/?squad=<%= squad.slug %>&orderBy=name" class="order-by-surname">Voornaam</a>

  <h2 class="card-header">SQUAD B MEMBERS</h2>
<section class="filteren">
  <div class="filter-section">
    <p>Filter hier op huisdieren:</p>

<!-- filteren op dieren -->
    <form class="filter-form">

      <div class="input-group">
        <input type="checkbox" id="iedereen" name="iedereen" checked />
        <label>Laat alles zien</label>
      </div>

      <div class="input-group">
        <input type="checkbox" id="hond" name="hond">
        <label>Hond</label>
      </div>

      <div class="input-group">
        <input type="checkbox" id="kat" name="kat">
        <label>Kat</label>
      </div>  

      <div class="input-group">
        <input type="checkbox" id="cavia" name="cavia">
        <label>Cavia</label>
      </div> 

      <div class="input-group">
        <input type="checkbox" id="vis" name="vis">
        <label>Vissen</label> 
      </div>

      <div class="form-btn">
        <button type="submit" class="form-confirm">Bevestigen</button>
      </div>

    </form>
  </div>

  <div class="filter-section">
    <p>Filter hier op voor- of achternaam:</p>

    <form class="filter-form">

      <div class="input-group">
        <input type="checkbox" id="voornaam" name="voornaam">
        <label>Voornaam</label>
      </div>

      <div class="input-group">
        <input type="checkbox" id="achternaam" name="achternaam">
        <label>Achternaam</label>
      </div>

      <div class="form-btn">
        <button type="submit" class="form-confirm">Bevestigen</button>
      </div>

    </form>
  </div>
</section>



  <section class="card-container">
    <!-- Hier komen de members -->

    <!-- Alle members worden als eerst opgehaald door de forEach -->

    <!-- Vervolgens wordt API voor de avatars opgehaald, als er geen avatar is wordt er een placeholder afbeelding geplaatst.-->

    <!-- Als laatst worden alle namen geimplementeerd, voornaam, prefix en achternaam.-->
    <% squad.members.forEach(member => { %>
    <div class="member-card">
      <% if (member.avatar) { %>
      <img src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
      <% }else{ %>
      <img src="/placeholder.jpeg" alt="Placeholder avatar" />
      <% } %>
      <h2><%= member.name %> <%= member.prefix %> <%= member.surname %></h2>
      <button type="button" class="info-button">Meer info!</button>
    </div>
    <% }) %>
  </section>
</main>

<%- include('./partials/foot') %>
